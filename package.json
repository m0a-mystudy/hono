{
  "name": "hono-drizzle-todo",
  "version": "1.0.0",
  "description": "Todo API with Hono and Drizzle",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc",
